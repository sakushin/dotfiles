include "109.mayu" # 109 キーボード設定
keymap Global
def option KeyboardDelay = disable 200 15

#拡張モディファイア(One Shot)
mod mod1 = !!無変換
mod mod2 = !!変換

#CapsLock -> Control
mod control += 英数
key *英数 = *LeftControl

#mac風入力モード切り替え
key *無変換 = &SetImeStatus(off)
key *変換 = &SetImeStatus(on)

#M1 左親指
key M1-*A = C-*Z
key M1-*S = C-*X
key M1-*D = C-*C
key M1-*F = C-*V
key M1-*H = *Left
key M1-*J = *Down
key M1-*K = *Up
key M1-*L = *Right
key M1-*U = *Delete
key M1-*I = *Insert
key M1-*O = *BackSpace
key M1-*Semicolon = *Enter
key M1-*Colon = *Applications
key M1-*Q = *Esc
key M1-*R = C-S-*R
key M1-*Solidus = C-*F
key M1-*Tab = A-*Tab
key M1-*_1 = *F1
key M1-*_2 = *F2
key M1-*_3 = *F3
key M1-*_4 = *F4
key M1-*_5 = *F5
key M1-*_6 = *F6
key M1-*_7 = *F7
key M1-*_8 = *F8
key M1-*_9 = *F9
key M1-*_0 = *F10

#M2 右親指
key M2-*Semicolon = *_0
key M2-*A = *_1
key M2-*S = *_2
key M2-*D = *_3
key M2-*F = *_4
key M2-*G = *_5
key M2-*H = *_6
key M2-*J = *_7
key M2-*K = *_8
key M2-*L = *_9

#M1-M2 同時押し
key M1-M2-*H = Home
key M1-M2-*L = End
key M1-M2-*J = PageDown
key M1-M2-*K = PageUp
key M1-M2-*Tab = A-S-*Tab
key M1-M2-*Q = A-*F4
key M1-M2-*Space = *英数

#ウィンドウ制御
key M1-M2-C-*H = &WindowMove(-64, 0)
key M1-M2-C-*L = &WindowMove(64, 0)
key M1-M2-C-*J = &WindowMove(0, 64)
key M1-M2-C-*K = &WindowMove(0, -64)
key M1-M2-C-*O = &WindowMaximize
key M1-M2-C-*U = &WindowMinimize
key M1-M2-C-*A = &WindowSetAlpha(85)
key M1-M2-C-*Tab = &WindowMonitorTo(current, 1)

