[include]
  path = ~/.gitconfig.local
[core]
  pager = less -R
  excludesfile = ~/.gitignore
  autocrlf = false
[user]
	name = sakushin
  email = sakushin20xx@gmail.com
[pull]
  rebase = true
[color]
  ui = auto
[http]
  postBuffer = 524288000
[alias]
  # status
  s = status
  st = status
  # log
  log = log --graph
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  # commit
  ci = commit
  cia = commit -a
  civ = commit -v
  ciav = commit -av
  cic = commit -c ORIG_HEAD # re-commit to fix after soft reset
  # checkout
  co = checkout
  cob = checkout -b
  # branch
  br = branch
  brr = branch -r
  # rebase
  rb = rebase
  rbi2 = rebase -i HEAD~2
  rbi3 = rebase -i HEAD~3
  rbi4 = rebase -i HEAD~4
  rbi5 = rebase -i HEAD~5
  rbi6 = rebase -i HEAD~6
  rbi7 = rebase -i HEAD~7
  # reset
  rs = reset
  rs2 = reset --soft HEAD^
  # stash
  sta = stash
  stap = stash pop
